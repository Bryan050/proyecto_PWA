{{> header}}

<body id="page-top">
    <div id="wrapper">
        {{> navbar_vertical}}
        <div class="d-flex flex-column" id="content-wrapper">
            <div id="content" style="padding-right: 0px;color: rgb(93,101,164);">
                {{> navbar_horizontal}}
                <div class="container-fluid">
                    <h3 class="text-dark mb-4">Entradas blog</h3>
                    
                    {{#each blogs}}
                    <div class="container-fluid" style="margin-bottom: 10px;">
                        <div class="row" style="margin-right: 0px;margin-left: 0px;border: 1px solid rgb(209,211,226) ;">
                            <div class="col-4 col-md-3 col-lg-2 col-xxl-1" style="padding-right: 0px;padding-left: 0px; width: 8rem"><img class="card-img" src="/assets/img/avatars/img-icon.jpg" style="padding: 12px; width: 100%; height: 100%"></div>
                            <div class="col-8 col-md-9 col-lg-10 col-xxl-11" style="padding-right: 0px;padding-left: 0px;">
                                <div class="row">
                                    <div class="col-10 col-sm-11 col-lg-11 col-xxl-11">
                                        <span style="display: none;" class="idEntrada">{{this.id}}</span>
                                        <a class="datosBlog" style="text-decoration: none;color: rgb(0,0,0);">
                                            <p style="padding-left: 12px;font-size: 14px;margin-top: 16px;color: #000000de;">{{this.titulo}}&nbsp;<br></p>
                                        </a></div>
                                    <div class="col-1 col-sm-1" style="padding-top: 12px;padding-right: 0px;padding-left: 0px;"><a href="#"><button class="btn shadow-none btnEliminar" type="button" style="padding: 0px;height: 0px;width: 0px;" data-bs-toggle="modal" data-bs-target="#eliminarModal"><i class="fas fa-trash-alt" style="color: rgb(0,0,0);"></i></button></a></div>
                                </div>
                                <div><span style="padding-left: 12px;font-size: 12px;color: #000000;">{{this.estado}}</span><span style="padding-right: 4px;padding-left: 4px;">·</span><span style="font-size: 12px;color: #000000de;">{{this.fecha_publicacion}}</span></div>
                            </div>
                        </div>
                    </div>
                    {{/each}}
                </div>
            </div>
            <div class="d-flex d-sm-flex justify-content-end justify-content-sm-end container">
                <button id="aniadir" data-bs-toggle="modal" data-bs-target="#categoriaModal" style="padding: 0; border: none; background: none;">
                <i class="fas fa-plus-circle" style="color: rgb(242,199,87);font-size: 55px;"></i>
                </button>
            </div>
            <footer class="bg-white sticky-footer">
                <div class="container my-auto">
                    <div class="text-center my-auto copyright"><span>Copyright © Brand 2022</span></div>
                </div>
            </footer>
            <div class="modal fade" role="dialog" tabindex="-1" id="eliminarModal">
                <div class="modal-dialog modal-dialog-centered" role="document">
                    <div class="modal-content">
                        <div class="modal-body"><i class="fa fa-warning d-flex d-sm-flex d-md-flex justify-content-center justify-content-sm-center justify-content-md-center" style="font-size: 62px;color: #ffcd00;margin-bottom: 10px;margin-top: 37px;"></i>
                            <p class="text-center">¿Desea eliminar la entrada?</p>
                        </div>
                        <div class="modal-footer"><button class="btn btn-light" type="button" data-bs-dismiss="modal">Cancelar</button><button class="btn btn-primary" data-bs-dismiss="modal" id="eliminar">Aceptar</button></div>
                    </div>
                </div>
            </div>
            <div class="modal fade" role="dialog" tabindex="-1" id="categoriaModal">
                    <div class="modal-dialog" role="document">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h4 class="modal-title">Seleccione la categoria</h4><button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                            </div>
                            <div class="modal-body">
                                <div class="container">
                                    <form class="user" id="modalForm" onsubmit="return validateMyForm()">
                                        <select class="form-control" id="categoria">
                                                <option>Categoria</option>
                                        </select>
                                        <input type="submit" id="submit" style="display: none">
                                    </form>
                                </div>
                            </div>
                            <div class="modal-footer"><button class="btn btn-light" type="button" data-bs-dismiss="modal">Cancelar</button><button class="btn btn-primary" type="button" id="btnAceptar">Aceptar</button></div>
                        </div>
                    </div>
            </div>
        </div><a class="border rounded d-inline scroll-to-top" href="#page-top"><i class="fas fa-angle-up"></i></a>
    </div>
    <script src="/assets/bootstrap/js/bootstrap.min.js"></script>
    <script type="module" src="/assets/js/fetch_script.js"></script>
    <script type="module" src="/assets/js/blog_script.js"></script>
    <script src="/assets/js/theme.js"></script>
</body>

</html>