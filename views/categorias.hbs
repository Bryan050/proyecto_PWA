{{> header}}

<body id="page-top">
    <div id="wrapper">
        {{> navbar_vertical}}
        <div class="d-flex flex-column" id="content-wrapper">
            <div id="content">
                {{> navbar_horizontal}}
                <div class="container-fluid">
                    <h3 class="text-dark mb-4">Categorias</h3>
                    <div class="card shadow">
                        <div class="card-header py-3">
                            <p class="text-primary m-0 fw-bold">Datos categoria</p>
                        </div>
                        <div class="card-body">
                            <div class="table-responsive table mt-2" id="dataTable" role="grid" aria-describedby="dataTable_info">
                                <table class="table my-0" id="dataTable">
                                    <thead>
                                        <tr>
                                            <th>#</th>
                                            <th>Nombre</th>
                                            <th style="width: 261px;">Operaciones</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        {{#each categorias}}
                                        <tr>
                                            <td style="display: none" class="idCategoria">{{this.id}}</td>
                                            <td class="nombreCategoria">{{incremented @index}}</td>
                                            <td>{{this.nombre}}</td>
                                            <td>
                                                <div class="btn-group" role="group"><button class="btn btn-primary btnAniadir btnAction" type="button" data-bs-toggle="modal" data-bs-target="#categoriaModal" style="font-size: 12px;">Añadir</button><button class="btn btn-secondary btnModificar btnAction" type="button" style="font-size: 12px;" data-bs-toggle="modal" data-bs-target="#categoriaModal">Modificar</button><button class="btn btn-danger btnAction" type="button" style="font-size: 12px;" data-bs-toggle="modal" data-bs-target="#eliminarModal">Eliminar</button></div>
                                            </td>
                                        </tr>
                                        {{/each}}
                                    </tbody>
                                    <tfoot>
                                        <tr>
                                            <td><strong>#</strong></td>
                                            <td><strong>Nombre</strong></td>
                                            <td><strong>Operaciones</strong></td>
                                        </tr>
                                    </tfoot>
                                </table>
                            </div>
                            <div class="row">
                                <div class="col-md-6 align-self-center">
                                    <p id="dataTable_info" class="dataTables_info" role="status" aria-live="polite">Showing 1 to 10 of 27</p>
                                </div>
                                <div class="col-md-6">
                                    <nav class="d-lg-flex justify-content-lg-end dataTables_paginate paging_simple_numbers">
                                        <ul class="pagination">
                                            <li class="page-item disabled"><a class="page-link" href="#" aria-label="Previous"><span aria-hidden="true">«</span></a></li>
                                            <li class="page-item active"><a class="page-link" href="#">1</a></li>
                                            <li class="page-item"><a class="page-link" href="#">2</a></li>
                                            <li class="page-item"><a class="page-link" href="#">3</a></li>
                                            <li class="page-item"><a class="page-link" href="#" aria-label="Next"><span aria-hidden="true">»</span></a></li>
                                        </ul>
                                    </nav>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal fade" role="dialog" tabindex="-1" id="eliminarModal">
                    <div class="modal-dialog modal-dialog-centered" role="document">
                        <div class="modal-content">
                            <div class="modal-body"><i class="fa fa-warning d-md-flex justify-content-md-center" style="font-size: 62px;color: #ffcd00;margin-bottom: 10px;margin-top: 37px;"></i>
                                <p class="text-center">¿Desea eliminar la categoria?</p>
                            </div>
                            <div class="modal-footer"><button class="btn btn-light" type="button" data-bs-dismiss="modal">Cancelar</button><button class="btn btn-primary" id="eliminar" data-bs-dismiss="modal">Aceptar</button></div>
                        </div>
                    </div>
                </div>
                <div class="modal fade" role="dialog" tabindex="-1" id="categoriaModal">
                    <div class="modal-dialog" role="document">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h4 class="modal-title">Datos</h4><button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                            </div>
                            <div class="modal-body">
                                <div class="container">
                                    <form class="user" id="modalForm">
                                        <div class="mb-3"><input class="form-control" type="text" style="padding: 10px;font-size: 14px;" placeholder="Nombre" name="nombre" id="nombreCategoria" required></div>
                                        <input type="submit" id="submit" style="display: none">
                                    </form>
                                </div>
                            </div>
                            <div class="modal-footer"><button class="btn btn-light" type="button" data-bs-dismiss="modal">Cancelar</button><button class="btn btn-primary" type="button" id="guardar">Guardar</button></div>
                        </div>
                    </div>
                </div>
            </div>
            <footer class="bg-white sticky-footer">
                <div class="container my-auto">
                    <div class="text-center my-auto copyright"><span>Copyright © Brand 2022</span></div>
                </div>
            </footer>
            <script src="/assets/bootstrap/js/bootstrap.min.js"></script>
     <script type="module" src="assets/js/fetch_script.js"></script>
    <script type="module" src="assets/js/categoria_script.js"></script>
    <script src="/assets/js/theme.js"></script>
</body>

</html>