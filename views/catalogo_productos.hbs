{{>header_blog}}
<body>
    {{> navbar_blog}}
    <div class="container" style="text-align: center;padding: 46px;"><input type="text" id="txtBusqueda"><button class="btn btn-primary" id="btnBuscar" type="button" style="padding: 0;height: 40px;margin-left: 5px;padding-right: 10px;padding-left: 10px;">Buscar</button></div>
    <hr style="margin-bottom: 25px;">
    <article>
        <div class="container container-fluid" style="padding-right: 0;padding-left: 0;margin-top: 10px;">
            <div class="row">
                <div class="col-3" id="categorias">
                    <h1 style="font-size: 20px;">Categorias</h1>
                    <hr style="margin: 5px 0px;">
                </div>
                <div class="col">
                    <div class="row" id="contenedorProductos">
                        {{#each productos}}
                            <div class="col-4 mb-2">
                                <div class="card" style="width: 18rem; height: 25rem">
                                    <div class="card-body">
                                        <div class="row">
                                            <div class="col-12"><img src="{{this.imagen}}" style="max-width: 100%;max-height: 100%;"></div>
                                            <div class="col-12"><a href="{{this.link}}" target="_blank" style="font-size: 16px;font-weight: bold;">{{this.descripcion}}</a>
                                                <p style="margin: 0;font-size: 16px;">${{this.precio}}</p>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        {{/each}} 
                    </div>
                </div>
            </div>
        </div>
    </article>
    {{> footer_blog}}
    <script src="/assets/bootstrap/js/bootstrap.min.js"></script>
    <script type="module" src="/assets/js/fetch_script.js"></script>
    <script type="module" src="/assets/js/catalogo_productos_script.js"></script>
</body>

</html>